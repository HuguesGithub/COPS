<div class="card col mx-1 p-0">
    <div class="card-header">Liste des événements</div>

    <!-- Card-body start -->
    <div class="card-body">
        <div class="row">
            <div class="col">
                <div class="table-responsive">
                    <table class="table table-sm table-striped m-0" aria-describedby="Liste événements">
                        <thead>
                            <tr>
                                <th>Titre</th>
                                <th>Catégorie</th>
                                <th>Date de début</th>
                                <th>Date de fin</th>
                                <th>Répétition</th>
                            </tr>
                        </thead>
                        <tbody>%1$s</tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <!-- Card-body end -->

    <div class="card-footer clearfix">
        <a href="%2$s" class="btn btn-sm btn-info float-left">Nouvel événement</a>
    </div>

</div>
